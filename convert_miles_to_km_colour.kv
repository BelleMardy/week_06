<Widget>:
    canvas.before:
        Color:
            rgba: .7, .7, .7, .7
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0.7, 1

    canvas.after:
        Color:
            rgba: 0, 0, 0, 1

BoxLayout:

    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 40
            on_text: app.handle_calculate()
            color: (1, 1, .3, .5)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
                color:(1, 1, .3, .3)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to kilometres'
        font_size: 35
        color: (1, .5, .7, .5)

    Label:
        id: output_label
        font_size: 48
        text: '0'
        color: (1, 1, .5, 1)
